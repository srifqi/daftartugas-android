<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="srifqi.simetri.daftartugas"
    android:versionCode="12"
    android:versionName="@string/version" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:isGame="false"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme"
        android:requiredForAllUsers="false">
        <activity
            android:name=".DaftarTugas"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MasukActivity"
            android:label="@string/title_activity_masuk" >
        </activity>
        <activity
            android:name=".PerbaruiActivity"
            android:label="@string/title_activity_perbarui" >
        </activity>
        <activity
            android:name=".Tentang"
            android:label="@string/title_activity_tentang" >
        </activity>
        <receiver android:name="DaftarTugasAppWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                android:resource="@xml/daftartugas_appwidget_info" />
        </receiver>
    </application>

</manifest>
